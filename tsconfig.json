{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "es2018",
    "module": "esnext",
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "composite": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
